.shopDetail-container
  width 100%
  height 100%
  .shopDetail-back
    width 30px
    height 30px
    background-color rgba(0,0,0,0.5)
    border-radius: 50%
    display: flex
    justify-content center
    align-items: center
    position fixed
    top: 20px
    left 20px
    z-index 10
    img 
      width 20px
      height 20px
  .shopDetail-zhuan
    width 30px
    height 30px
    background-color rgba(0,0,0,0.5)
    border-radius: 50%
    display: flex
    justify-content center
    align-items: center
    position fixed
    top: 20px
    right 20px
    z-index 10
    img 
      width 20px
      height 20px
  #swipershop
    position: static
    #scrollshop
      height 400px
  .detail-message
    padding 15px 15px
    background-color #fff
    .detail-message__flex
      display: flex
      justify-content flex-start
      align-items: center
      .detail-message1
        padding 2px
        background-color red
        color #fff
        border-radius: 2px
        font-size: 10px
      .detail-message2
        color red
        font-size: 16px
        font-weight bolder
      .detail-message3
        font-size: 10px
        color rgba(0,0,0,0.6)
        text-decoration: line-through
      .detail-message4
        font-size: 10px
        color rgba(0,0,0,0.6)
      .detail-message5
        font-size: 10px
        padding 2px
        border-radius: 2px
        border: 1px solid rgba(0,0,0,0.6)
        color: red
      .margin
        margin-right 5px
    .detail-title
      position relative
      margin-top 10px
      line-height 1.5
      .line-clamp1
        width 88%
        word-break: break-all;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-box-orient: vertical; 
        -webkit-line-clamp: 1; 
        overflow: hidden;
      .line-clamp2
        width 88%
        word-break: break-all;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-box-orient: vertical; 
        -webkit-line-clamp: 2; 
        overflow: hidden; 
      .detail-title__right
        position absolute
        top 50%
        transform: translateY(-50%)
        right 0
        color: rgba(0,0,0,0.6)
        font-size: 10px
        display: flex
        justify-content center
        align-items: center
        flex-direction: column
        .detail-title__icon
          width 30px
          height 20px
  
  .detail-center
    width 100%
    height 150px
    margin-top 10px
    margin-bottom 100px
  .shop-carttab
    position fixed
    left 0
    bottom 0
    width 100%
    height 50px
    background-color #fff
    display: flex
    justify-content: flex-start
    .shop-carttab__left
      box-sizing: border-box
      display: flex
      justify-content: space-around
      align-items: center
      width 40%
      height 100%
      .shop-left__icon
        font-size: 10px
        color rgba(0,0,0,0.6)
        display: flex
        flex-direction: column
        justify-content center
        align-items: center
        img 
          width 20px
          height 20px
          margin-bottom 2px
      .shopCart-num1
        position relative
        .shopCart-num
          position absolute
          top -6px
          right 0
          width 13px
          height 13px
          border-radius: 50%
          background-color: red
          color #fff
          font-size: 9px
          display: flex
          justify-content: center
          align-items: center
    .shop-carttab__right
      box-sizing: border-box
      width 60%
      height 100%
      display: flex
      justify-content flex-start
      color #fff
      text-align center
      line-height 50px
      letter-spacing: 1px
      font-size: 13px
      .shop-operate__tab1
        position relative
        width 50%
        height 100%
        background: red
        opacity: 0.5
      .shop-operate__tab2
        width 50%
        height 100%
        background-color red

