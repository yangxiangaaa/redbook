.focus-container
  background-color #fff
  .focus-items
    box-sizing border-box
    height 175px
    padding 10px 0 10px 10px
    overflow scroll
    display -webkit-box
    white-space nowrap
    overflow hidden
    text-align justify
    overflow-x initial
    .focus-item
      position relative 
      display inline-block
      border-radius 8px
      background-color #fff
      width 100px
      height 150px
      margin-right 8px
      .focus-item__flex
          width 100%
          height 100%
        .focus-bgc
          border-radius 8px
          width 100%
          height 100%
        .focus-avatar
          border-radius 50%
          width 25px
          height 25px
          position absolute
          bottom 18%
          left 8%
        span 
          position absolute
          font-size 10px
          color #fff
          bottom 5%
          left 8%
        
       
