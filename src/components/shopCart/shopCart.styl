.shopCart-container
  width 100%
  .shopCart-header
    height 45px
    display: flex
    justify-content center
    align-items: center
    background-color #fff
    border-bottom: 1px solid rgba(0,0,0,0.1)
    img 
      width 20px
      height 30px
    .shopCart-header__middle
      font-size: 15px
      font-weight bolder
      margin 0 32%
    .shopCart-header__right
      font-size: 13px
      color: rgba(0,0,0,0.6)
  .shopCart-tab
    box-sizing: border-box
    padding-left 10px
    position fixed
    bottom 0
    left 0
    background-color #ffffff
    width 100%
    height 50px
    .shopCart-tab__left
      height 50px
      float left
      display flex
      justify-content: flex-start
      align-items: center
      p
        margin-top -2px
    .shopCart-tab__right
      margin-left 15px
      width 25%
      background-color red
      font-size: 13px
      color #fff
      float right
      height 50px
      overflow hidden
      text-align center
      letter-spacing: 2px
      line-height 50px
    .shopCart-center
      font-size: 12px
      height 50px
      float right
      overflow hidden
      display: flex
      flex-direction: column
      justify-content center
      align-items: flex-end
      .shopCart-center__top
        color black
        font-weight bold
        span 
          color red
          font-weight bolder
      .shopCart-center__bottom
        margin-top 8px
        color: rgba(0,0,0,0.8)
  .shopCart-content
    width 100%
    .content-items
      box-sizing: border-box
      padding-left 10px
      width 100%
      height 100px
      background-color #fff
      margin-top 10px
      display: flex
      align-items: center
      .content-select
        width 15px
        height 15px
        float left
      .content-pic
        width 80px
        height 80px
        margin-left 10px
      .content-right
        display: flex
        flex-direction: column
        align-items: flex-start
        justify-content space-between
        width 60%
        height 64%
        margin-left 10px
        .content-right__top
          font-size: 12px
          color rgba(0,0,0,0.8)
          .content-right__title
            margin-bottom 6px
        .content-right__bottom
          width 100%
          height 30px
          display: flex
          align-items: center
          justify-content: space-between
          margin-top 18px
          .content-right__price
            color red
            font-weight: bold
          .content-right__operate
            width 30%
            height 30px
            display: flex
            justify-content: space-between
            align-items: center
            .addOrder
              width 20px
              height 20px
            .orderNum
              font-size: 10px
              font-weight: bold
            .reduceOrder
              width 20px
              height 20px

        





.shop-select
  margin-right 4px
  width 15px
  height 15px
  border: 1px solid rgba(0,0,0,0.6)
  border-radius: 50%
.shop-isSelect
  background-image url("../../assets/images/选中.png")
  background-size: 130% 130%
  background-position -2px -2px


.noCart
  width 100%
  height 400px
  display: flex
  justify-content center
  align-items: center
  img 
    width 150px
    height 200px

.shopCart-cancle
  float right 
  margin-right 20px
  margin-top 15px
  width 50px
  height 20px
  font-size: 12px
  border: 1px solid rgba(0,0,0,0.6)
  color rgba(0,0,0,0.6)
  border-radius: 10px
  text-align center
  line-height 20px

