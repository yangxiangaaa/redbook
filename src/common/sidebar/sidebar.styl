.sidebar-container
  width 100%
  height 100%
  .shop-bgc
    position fixed
    top 0
    left 0
    width 100%
    height 100%
  .side-container
    box-sizing: border-box
    padding 30px 30px
    position fixed
    background-color #ffffff
    top 0
    left 0
    width 55%
    height 100vh
    z-index 100
    .side-container__title
      font-size: 23px
    .side-container__list
      display: flex
      flex-direction: column
      justify-content: center
      align-items: baseline
      .side-listItem
        margin-top 28px
        img 
          width 22px
          height 22px
          vertical-align: middle
          margin-right 10px

.active
  transform: translate(-110%, 0%)
  transition transform 0.7s ease
.enter
  transform: translate(0%, 0%)
  transition transform 0.7s ease
.shop-bgc__enter
  background-color #000
  opacity 0.4
  transition all 0.3s ease
  z-index 100
.shop-bgc__active
  background-color #000
  opacity 0
  transition all 0.3s ease
