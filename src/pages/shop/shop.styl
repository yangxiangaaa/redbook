.shop-container
  position relative
  box-sizing border-box
  width 100%
  background-color #f4f9f8
  .shop-card__icon
    position fixed
    bottom 12.2%
    right 5.4%
    width 40px
    height 40px
    display: flex
    justify-content center
    align-items: center
    border-radius 50%
    background-color rgba(0,0,0,0.8)
    z-index 3
    img 
      width 22px
      height 22px
  .shop-header
    position fixed
    top 0
    box-sizing border-box
    width 100%
    height 45px
    background-color #fff
    display: flex
    justify-content space-around
    align-items: center
    z-index 4
    border: 1px solid rgba(0,0,0,0.1)
    .left
      width 18px
      height 18px
    .search
      padding-left 15px
      font-size 13px
      border-radius 13px 
      height 25px
      width 75%
      line-height 25px
      background-color rgba(0,0,0,0.1)
      color: rgba(0,0,0,0.6)
      display flex
      justify-content flex-start
      align-items center
      img 
        margin-right 5px 
        width 12px
        height 12px
    .right
      font-size 11px
      width 28px
      height 30px
      display: flex
      flex-direction: column
      justify-content center
      align-items: center
      img 
        width 22px
        height 22px
.my-bullet-active
  background: #fff;
  opacity: 1;
.shop-bottom
  padding-top 124px
  width 100%
  position relative
  top: 45px
  #swiper2
    position absolute
    top 10px;
    width: 100%;
    height: 110px;
    #swiper-slide
      width 350px
      margin auto
      height 100%
      border-radius 10px
      img 
        border-radius 10px
  .shop-bottom__icon1
    margin auto
    width 350px
    height 20px 
  .shop-bottom__icon2
    margin 15px auto 5px
    width 350px
    height 230px 
    img 
      border-radius: 10px
  .shop-goods__list
    min-height: 800px
    .shop-nav
      width 100%
      height 40px
      display: flex
      justify-content space-around
      align-items: center
      .shop-nav__item
        font-size: 13px
        color: rgba(0,0,0,0.6)
      .shop-nav__itemactive
        position relative
        font-size: 13px
        color: #000000
        &:before
          content ''
          width 28px
          background-color red
          height 2px
          border-radius 1px
          position absolute
          top 19px
          left 50%
          transform translateX(-50%)
          z-index 3
.shop-goods__itemList
  width 100%
  position relative
  top 40px
  #swiper3
    width: 100%;
    position absolute
    top 10px
    #scroll
      overflow: hidden
      min-height: 1300px
      width 350px  
.conditionArea_fixed
    position: fixed;
    height 40px
    top: 45px;
    z-index 3
    background-color #fff
    
